<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    tools:context="com.example.anafl.comilex.Atividades.Cadastro">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro "
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="text" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text" />


        <EditText
            android:id="@+id/cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:hint="CEP"
            android:inputType="number" />

        <EditText
            android:id="@+id/contato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contato"
            android:inputType="number" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tipo de Cadastro"
            android:textSize="16sp"
            android:paddingLeft="4dp"/>

        <RadioGroup
            android:id="@+id/radio_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_botao_vend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkTipoCadastro"
                android:text="Vendendor"

                />

            <RadioButton
                android:id="@+id/radio_botao_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkTipoCadastro"
                android:text="Comprador" />

        </RadioGroup>


        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/conf_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Senha"
            android:inputType="textPassword" />


    </LinearLayout>


    <Button
        android:id="@+id/botao_finalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#7cb342"
        android:text="Finalizar"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>
